<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MinimumCalculator"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MinimumCalculator.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.minimumcalculator.GameDialog"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.minimumcalculator.Game"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.minimumcalculator.GameEndActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.minimumcalculator.RoundScores"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.minimumcalculator.ViewStats"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.minimumcalculator.ViewPlayerStats"
            android:screenOrientation="portrait" />
    </application>

</manifest>